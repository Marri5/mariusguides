<div class="admin-container">
  <%- include('../partials/admin-sidebar') %>
  
  <div class="admin-content">
    <div class="admin-header">
      <h1>Admin Dashboard</h1>
      <p>Welcome to the Marius Guides CMS</p>
    </div>
    
    <div class="dashboard-stats">
      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-book"></i>
        </div>
        <div class="stat-content">
          <h3>Total Guides</h3>
          <p class="stat-number"><%= guidesCount %></p>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-cubes"></i>
        </div>
        <div class="stat-content">
          <h3>Content Blocks</h3>
          <p class="stat-number"><%= contentBlocksCount %></p>
        </div>
      </div>
    </div>
    
    <div class="dashboard-section">
      <div class="section-header">
        <h2>Recent Guides</h2>
        <a href="/admin/guides" class="btn btn-outline">View All</a>
      </div>
      
      <div class="table-responsive">
        <table class="admin-table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Author</th>
              <th>Created</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (recentGuides && recentGuides.length > 0) { %>
              <% recentGuides.forEach(guide => { %>
                <tr>
                  <td><%= guide.title %></td>
                  <td><%= guide.author.name %></td>
                  <td><%= new Date(guide.createdAt).toLocaleDateString() %></td>
                  <td>
                    <span class="status-badge <%= guide.published ? 'published' : 'draft' %>">
                      <%= guide.published ? 'Published' : 'Draft' %>
                    </span>
                  </td>
                  <td>
                    <div class="action-buttons">
                      <a href="/admin/guides/<%= guide._id %>/edit" class="btn btn-sm btn-primary">
                        <i class="fas fa-edit"></i> Edit
                      </a>
                      <a href="/guides/<%= guide.slug %>" class="btn btn-sm btn-secondary" target="_blank">
                        <i class="fas fa-eye"></i> View
                      </a>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5" class="text-center">No guides available yet.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    
    <div class="dashboard-actions">
      <a href="/admin/guides/create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Guide
      </a>
      <a href="/admin/content-blocks/create" class="btn btn-secondary">
        <i class="fas fa-plus"></i> Add Content Block
      </a>
    </div>
  </div>
</div> 